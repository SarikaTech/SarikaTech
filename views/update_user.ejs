                <option name="" value="0" selected>Post applied for</option>
                <option name="table1" value="<%=user.dropd=='1'?'selected':''%>">Table 1</option>
                <option name="table2" value="<%=user.dropd=='2'?'selected':''%>">Table 2</option>
                <option name="table3" value="<%=user.dropd=='3'?'selected':''%>">Table 3</option>
